<% title(@student.name) %>

<header>
	<h2><%= @student.name %></h2>

	<ul class="actions">
		<li><%= link_to "Sửa", [:edit, @klass, @student], class: "edit" %></li>
		<li><%= link_to "Xóa", [@klass, @student], class: "delete",
			method: :delete, data: { confirm: "Bạn đã chắc chưa?" } %></li>
	</ul>
</header>

<table class="info">
	<tr>
		<th>Họ và tên</th>
		<td><%= @student.name %></td>
	</tr>
	<tr>
		<th>Tên lớp</th>
		<td><%= @student.klass.name %></td>
	</tr>
	<tr>
		<th>Ngày sinh</th>
		<td><%= format_date(@student.date_of_birth, false) %></td>
	</tr>
	<tr>
		<th>Giới tính</th>
		<td><%= @student.to_gender %></td>
	</tr>
	<tr>
		<th>Địa chỉ</th>
		<td><%= @student.address %></td>
	</tr>
	<tr>
		<th>Địa chỉ Email</th>
		<td><%= @student.email %></td>
	</tr>
	<tr>
		<th>Ngày tạo</th>
		<td><%= format_date(@student.created_at) %></td>
	</tr>
	<tr>
		<th>Cập nhật lần cuối</th>
		<td><%= format_date(@student.updated_at) %></td>
	</tr>
</table>

<header>
	<h2 class="maw100 center">Kết quả học tập</h2>
</header>

<div class="listing-index">
	<table>
		<thead>
			<tr>
				<th></th>
				<th>Học lực</th>
				<th>Hạnh kiểm</th>
				<th>Danh hiệu</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td><strong>Học kỳ 1</strong></td>
				<td><%= @score_1.to_name("mark") %></td>
				<td>
					<%= @score_1.to_name("conduct") %>
					<% if is_admin? || is_teacher? %>
					<%= link_to "Cập nhật", [:edit, @klass, @student, @score_1],
						class: "tiny"  %>
					<% end %>
				</td>
				<td><%= @score_1.to_name("mark") %></td>
			</tr>
			<tr>
				<td><strong>Học kỳ 2</strong></td>
				<td><%= @score_2.to_name("mark") %></td>
				<td>
					<%= @score_2.to_name("conduct") %>
					<% if is_admin? || is_teacher? %>
					<%= link_to "Cập nhật", [:edit, @klass, @student, @score_2],
						class: "tiny"  %>
					<% end %>
				</td>
				<td><%= @score_2.to_name("mark") %></td>
			</tr>
			<tr>
				<td><strong>Cả năm</strong></td>
				<td><%= @student.mark.name %></td>
				<td><%= @student.to_conduct %></td>
				<td><%= @student.ability.name %></td>
			</tr>
		</tbody>
	</table>
</div>

<h5 class="center">Bảng điểm</h5>
<div class="listing-index">
	<table>
		<thead>
			<tr>
				<th colspan="2"></th>
				<th colspan="4">Học kỳ 1</th>
				<th colspan="4">Học kỳ 2</th>
			</tr>
			<tr>
				<th>STT</th>
				<th>Tên môn</th>
				<th>Điểm 15'</th>
				<th>Điểm 45'</th>
				<th>Điểm Cuối kỳ</th>
				<th>Điểm TB</th>
				<th>Điểm 15'</th>
				<th>Điểm 45'</th>
				<th>Điểm Cuối kỳ</th>
				<th>Điểm TB</th>
			</tr>
		</thead>
		<tbody>
			<% @courses.each_with_index do |course, index| %>
				<tr>
					<td><%= index + 1 %></td>
					<td><%= course.name %></td>
			<% @scores.each do |score| %>
				<% detail = Detail.contain(score, course, true) %>
					<td><%= detail.audition %></td>
					<td><%= detail.semi_final %></td>
					<td><%= detail.final %></td>
					<td><%= detail.gpa %></td>
			<% end %>
				</tr>
				
			<% end %>
		</tbody>
	</table>
</div>

<div>
		
</div>

<header></header>
<%= link_to "Trở về", :back, class: "back" %>