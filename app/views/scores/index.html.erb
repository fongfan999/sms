<%= title("Bảng điểm lớp #{@klass.name}") %>

<header>
  <h2>Bảng điểm lớp <%= @klass.name %></h2>
</header>

<% if @scores.present? %>
  <div class="listing-index">
    <table>
      <thead>
        <tr>
          <th>STT</th>
          <th>Lớp</th>
          <th>Khối</th>
          <th>Tổng số học sinh</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @klasses.each_with_index do |klass, index| %>
        <tr>
          <td><%= link_to index + 1, klass %></td>
          <td><%= klass.name %></td>
          <td><%= klass.grade.name %></td>
          <td><%= klass.students_count %></td>
          <td><%= link_to 'Sửa', [:edit, :admin, klass], class: "edit" %>
          <%= link_to 'Xóa', [:admin, klass], method: :delete, data: { confirm: 'Bạn đã chắc chưa?' }, class: "delete" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <p>Hiện tại chưa có dữ liệu.</p>
<% end %>

<%= link_to "Trở về", :back, class: "back" %>
