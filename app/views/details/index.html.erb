<%= render "header" %>

<% if @details.present? %>
  <h5 class="center">Bảng điểm</h5>
  <div class="listing-index icon-only">
    <table>
      <thead>
        <tr>
          <th>STT</th>
          <th>Họ và tên</th>
          <th>Điểm 15'</th>
          <th>Điểm 45'</th>
          <th>Điểm Cuối kỳ</th>
          <th>Điểm TB</th>
          <th>
            <%= link_to '', edit_all_klass_semester_course_details_path(
              @klass, @semester, @course), class: "edit" %>

            <%= link_to '', reset_all_klass_semester_course_details_path(
              @klass, @semester, @course), class: "reset",
              method: :patch, title: "Thiết lập lại tất cả",
              data: { toggle: 'tooltip', placement: "bottom",
                confirm: 'Bạn đã chắc chưa?' } %>
          </th>
        </tr>
      </thead>
      <tbody>
        <% @details.each_with_index do |detail, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= detail.score.student.name %></td>
          <td class="input-score"><%= detail.audition %></td>
          <td class="input-score"><%= detail.semi_final %></td>
          <td class="input-score"><%= detail.final %></td>
          <td class="input-score"><%= detail.gpa %></td>
          <td>
            <%= link_to '', [:edit, @klass, @semester, @course, detail],
            	class: "edit" %>
            <%= link_to '', [:reset, @klass, @semester, @course, detail],
              method: :patch, class: "reset", title: "Thiết lập lại",
              data: { toggle: 'tooltip', placement: "bottom",
                confirm: 'Bạn đã chắc chưa?' }  %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <p>Hiện tại chưa có dữ liệu.</p>
<% end %>

<%= link_to "Trở về", @klass, class: "back" %>