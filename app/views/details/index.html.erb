<%= title("Bảng điểm lớp #{@klass.name}") %>

<header>
  <h2>Lớp <%= @klass.name %></h2>
</header>

<header>
  <h3 class="mt-40 mw100 center"><%= @semester.name %></h3>
  <h4 class="mw100 center">Môn: <%= @course.name %></h4>
  <h6 class="mw100 center">
  <% Semester.all.each do |semester| %>
    <%= link_to render(semester),
      klass_semester_course_details_path(@klass, semester, @course),
      class: @semester.id == semester.id ? "btn-none disabled" : "btn-none" %>
  <% end %>
  </h6>
  <h6 class="mw100 center">
  <% Course.all.each do |course| %>
    <%= link_to render(course),
      klass_semester_course_details_path(@klass, @semester, course),
      class: @course.id == course.id ? "btn-none disabled" : "btn-none"  %>
  <% end %>
  </h6>
</header>

<% klass_semester_course_details_path(@klass, Semester.first, Course.first) %>

<% if @details.present? %>
  <h5 class="center">Bảng điểm</h5>
  <div class="listing-index icon-only">
    <table>
      <thead>
        <tr>
          <th>STT</th>
          <th>Họ và tên</th>
          <th>Điểm 15'</th>
          <th>Điểm 45'</th>
          <th>Điểm Cuối kỳ</th>
          <th>Điểm TB</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @details.each_with_index do |detail, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= detail.score.student.name %></td>
          <td class="input-score"><%= detail.audition %></td>
          <td class="input-score"><%= detail.semi_final %></td>
          <td class="input-score"><%= detail.final %></td>
          <td class="input-score"><%= detail.gpa %></td>
          <td>
            <%= link_to '', [:edit, @klass, @semester, @course, detail],
            	class: "edit" %>
            <%= link_to '', [:reset_score, @klass, @semester, @course, detail],
              method: :patch, class: "reset", title: "Thiết lập lại",
              data: { toggle: 'tooltip', placement: "bottom",
                confirm: 'Bạn đã chắc chưa?' }  %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <p>Hiện tại chưa có dữ liệu.</p>
<% end %>

<%= link_to "Trở về", :back, class: "back" %>