<%= simple_form_for [:admin, klass] do |f| %>
  <%= f.input :name, label: "Tên Lớp" %>
  <%= f.association :grade, include_blank: false, label: "Lớp" %><br/>
  <%= f.input :teacher_id, collection: Teacher.all,
    label: "Giáo viên chủ nhiệm" %><br/>

  <%= f.button :submit, value: klass.new_record? ? "Tạo Lớp" : "Cập nhật",
  	class: "btn-success" %>
<% end %>