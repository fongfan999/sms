<%= simple_form_for [:admin, @rule] do |f| %>
  <%= f.input :max_quantity, label: "Số lượng học sinh tối đa mỗi lớp" %>
  <%= f.input :min_age, label: "Tuổi tối thiểu" %>
  <%= f.input :max_age, label: "Tuổi tối đa" %>
  <%= f.input :min_point, label: "Điểm tối thiểu" %>
  <%= f.input :max_point, label: "Điểm tối đa" %>

  <%= f.button :submit, value: "Cập nhật", class: "btn-success" %>
<% end %>